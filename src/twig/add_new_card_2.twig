{% extends "./includes/_layout.twig" %}

{% block content %}
	<!-- out --> 
	<div class="out">

		{% include "./includes/_header.twig" %}
		<!-- search -->
		<div class="search is-white">
			<div class="search__in">
				<a href="#" class="location">
					<span class="icon icon-uni24"></span>
					<span class="location__text">в Москве</span>
				</a>
				<div class="search__form">
					<form action="">
						<input type="text" placeholder="Поиск по услугам и компаниям">
						<button class="search__btn" type="button">
							<i class="icon icon-uni4B"></i>
						</button>
					</form>
				</div>
			</div>
		</div>
		<!-- l -->
		<div class="l">
			<div class="l__in">
				<!-- breadcrumbs -->
				<ul class="breadcrumbs">
					<li><a href="#">Все категории</a></li>
					<li>Интернет</li>
				</ul>
				<!-- wrap -->
				<div class="wrap">
					<!-- leftbar -->
					<div class="leftbar">
						<!-- title -->
						<div class="title">
							<h3>Билайн Интернет</h3>
							<ul class="title__list">
								<li class="title__item">15 — 15 000 ₽ можно внести</li>
								<li class="title__item">24 ч. срок зачисления</li>
								<li class="title__item">0 % комиссия</li>
							</ul>
						</div>
						<!-- payment -->
						<div class="payment">
							<form action="">
								<div class="payment__row">
									<div class="payment__label">
										<label for="">Номер лицевого счета:</label>
									</div>
									<div class="payment__right">
										<input type="text" class="input" placeholder="Введите номер счета, указанный в договоре с провайдером">
										<div class="payment__icon"><i class="icon icon-icon-info"></i></div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<span>Способ оплаты:</span>
									</div>
									<div class="payment__right">
										<div class="payment__card">
											<div class="payment__field">
												<!-- select -->
												<div class="select js-select">
													<div class="select__icon">
														<img src="img/svg/purse.svg" alt="img">
													</div>
													<input type="text" value="123123123 — 10 000 ₽" class="input js-input" readonly="">
													<select>
														<option value="item1">item1</option>
														<option value="item2">item2</option>
														<option value="item3">item3</option>
													</select>			
												</div>
												<a href="#" class="btn-text btn-text_icon btn-text_blue">
													<i class="icon icon-close"></i>
													<span>Закрыть</span>
												</a>
											</div>
											<div class="payment__wrap">
												<!-- ticket -->
												<div class="ticket">
													<div class="ticket__row">
														<label for="card-numb" class="ticket__label">Номер карты</label>
														<input type="text" name="card-numb" id="card-numb" placeholder="XXXX XXXX XXXX XXXX" class="input js-card-numb">
														<div class="info">
															<a href="#" class="info__btn">
																<i class="icon icon-icon-info"></i>
															</a>
														</div>
													</div>
													<div class="ticket__row">
														<div class="ticket__date">
															<label for="date" class="ticket__label">Срок действия карты</label>
															<div class="ticket__field">
																<div class="ticket__col">
																	<input type="text" name="date" id="date" placeholder="XX" class="input">
																</div>
																<div class="ticket__text"><span>/</span></div>
																<div class="ticket__col">
																	<input type="text" name="month" id="month" placeholder="YY" class="input">
																</div>
																<div class="info">
																	<a href="#" class="info__btn">
																		<i class="icon icon-icon-info"></i>
																	</a>
																</div>
															</div>
														</div>
														<div class="ticket__cvv">
															<label for="cvv" class="ticket__label">CVC/CVV</label>
															<div class="ticket__field">
																<div class="ticket__col">
																	<input type="text" name="cvv" id="cvv" placeholder="123" class="input">
																</div>
																<div class="info">
																	<a href="#" class="info__btn">
																		<i class="icon icon-icon-info"></i>
																	</a>
																</div>
															</div>
														</div>
													</div>
													<div class="ticket__row">
														<label for="id" class="ticket__label">Имя и фамилия владельца:</label>
														<input type="text" name="id" id="id" placeholder="ЛАТИНИЦЕЙ" class="input is-up">
														<div class="info">
															<a href="#" class="info__btn">
																<i class="icon icon-icon-info"></i>
															</a>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<label for="">Сумма:</label>
									</div>
									<div class="payment__right">
										<input type="text" class="input" placeholder="Минимум — 15, максимум — 15 000">
										<div class="payment__icon"><i class="icon icon-ruble"></i></div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<span>Всего к оплате:</span>
									</div>
									<div class="payment__right">
										<div class="payment__text"><span class="price">0,00 ₽</span>, с учётом комиссии 0%</div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__right">
										<button class="btn btn_big" type="sybmit">Оплатить</button>
									</div>
								</div>
							</form>
						</div>
					</div>
					<!-- rightbar -->
					<div class="rightbar">
						<!-- fasten -->
						<div class="fasten">
							<div class="fasten__img">
								<img src="img/svg/beeline3.svg" alt="img">
							</div>
							<a href="#" class="fasten__link">
								<i class="icon icon-reg"></i>
								<span>Закрепить на главной</span>
							</a>
						</div>
						<h4 class="title-small">Частые вопросы:</h4>
						<ul class="list">
							{% for a in list%}
							<li><a href="#">{{a.item}}</a></li>
							{% endfor %}
						</ul>
						<h4 class="title-small">Оплатите также:</h4>
						{% for a in also %}
							<p><a href="#">{{a.item}}</a></p>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>

	</div>
 
	{% include "./includes/_footer.twig" %}

{% endblock %}