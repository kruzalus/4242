{% extends "./includes/_layout.twig" %}

{% block content %}
	<!-- out --> 
	<div class="out">

		{% include "./includes/_header.twig" %}
		<!-- l -->
		<div class="l">
			<div class="l__in">
				<!-- breadcrumbs -->
				<ul class="breadcrumbs">
					<li><a href="#">Переводы</a></li>
				</ul>
				<!-- wrap -->
				<div class="wrap">
					<!-- leftbar -->
					<div class="leftbar">
						<!-- title -->
						<div class="title">
							<h3>Перевод другим людям</h3>
							<ul class="title__list">
								<li class="title__item">15 — 15 000 ₽ можно внести</li>
								<li class="title__item">Моментально — срок зачисления</li>
								<li class="title__item">0,5 % комиссия, но не менее 50 ₽</li>
							</ul>
						</div>
						<!-- payment -->
						<div class="payment">
							<form action="">
								<div class="payment__row">
									<div class="dip is-from js-dip">
										<div class="dip__ind">c</div>
										<div class="dip__arr"></div>
										<input type="text" class="js-dip-input" hidden>
										<div class="dip__text js-dip-text">
											<div class="dip__icon">
												<img src="img/svg/purse.svg" alt="img">
											</div>
											<div class="dip__val">123 123 123</div>
											<div class="dip__sum">— 10 000 ₽</div>
										</div>
										<div class="dip__block js-dip-block">
											<div class="dip__group">
												<div class="dip__list">
													<div class="dip__item js-dip-item">
														<div class="dip__icon">
															<img src="img/svg/purse.svg" alt="img">
														</div>
														<div class="dip__val js-dip-val">123 123 123</div>
														<div class="dip__sum">— 10 000 ₽</div>
													</div>
													<div class="dip__item js-dip-item">
														<div class="dip__icon">
															<img src="img/svg/purse.svg" alt="img">
														</div>
														<div class="dip__val js-dip-val">123 123 123</div>
														<div class="dip__sum">— 10 000 ₽</div>
													</div>
													<div class="dip__item js-dip-item">
														<div class="dip__icon">
															<img src="img/svg/purse.svg" alt="img">
														</div>
														<div class="dip__val js-dip-val">123 123 123</div>
														<div class="dip__sum">— 10 000 ₽</div>
													</div>
												</div>
											</div>
										</div>
									</div>
									<div class="select is-stat is-to js-select">
										<span class="select__arr"></span>
										<div class="select__text">на</div>
										<div class="select__icon">
											<img src="img/svg/purse.svg" alt="img">
										</div>
										<input type="text" class="input js-input" placeholder="укажите номер кошелька">
										<select>
											<option value="item1">item1</option>
											<option value="item2">item2</option>
											<option value="item3">item3</option>
										</select>			
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<label for="price">Сумма:</label>
									</div>
									<div class="payment__right">
										<input type="text" class="input" value="10" id="price" placeholder="Минимум — 15, максимум — 15 000">
										<div class="payment__icon"><i class="icon icon-ruble"></i></div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<span>Будет списано:</span>
									</div>
									<div class="payment__right">
										<div class="payment__text"><span class="price">60,00 ₽</span>, с учётом комиссии 0,5% (но не менее 50 ₽)</div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<span>Будет зачислено:</span>
									</div>
									<div class="payment__right">
										<div class="payment__text"><span class="price">10,00 ₽</span></div>
									</div>
								</div>
								<div class="payment__row">
									<div class="payment__label">
										<a href="#" class="prev">Назад</a>
									</div>
									<div class="payment__right">
										<button class="btn btn_big" type="sybmit">Продолжить</button>
									</div>
								</div>
							</form>
						</div>
					</div>
					<!-- rightbar -->
					<div class="rightbar">
						<!-- fasten -->
						<div class="fasten">
							<div class="fasten__img">
								<img src="img/svg/between.svg" alt="img">
							</div>
						</div>
						<h4 class="title-small">Частые вопросы:</h4>
						<ul class="list">
							{% for a in list%}
							<li><a href="#">{{a.item}}</a></li>
							{% endfor %}
						</ul>
						<h4 class="title-small">Оплатите также:</h4>
						{% for a in also %}
							<p><a href="#">{{a.item}}</a></p>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>

	</div>
 
	{% include "./includes/_footer.twig" %}

{% endblock %}